<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment"
    tools:layout="@layout/fragment_menu"
    android:id="@+id/menuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:id="@+id/button_randomWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Random Word"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button_randomColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Random Color"
            app:layout_constraintTop_toBottomOf="@id/button_randomWord"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button_dice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Dice Roll"
            app:layout_constraintTop_toBottomOf="@id/button_randomColor"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button_8Ball"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:text="Magic 8 Ball"
            app:layout_constraintTop_toBottomOf="@id/button_dice"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button_coinFlip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:text="Coin Flip"
            app:layout_constraintTop_toBottomOf="@id/button_8Ball"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/button_spinBottle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Spin the Bottle"
            app:layout_constraintTop_toBottomOf="@id/button_coinFlip"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>